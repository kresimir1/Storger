<div id="homepage1">
  <div class="row">


  <div class="small-9 column">
  <h2>Sign up</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <div class="small-5">
      <%= f.input :first_name, label:'First Name ', required: true, autofocus: true%>
      <%= f.input :last_name, label: 'Last Name ', required: true, autofocus: true, class: "form-control"   %>
      <%= f.input :email, placeholder: 'example@adress.com', required: true, autofocus: true %>
      <%= f.input :password, placeholder: "Must have at least #{@minimum_password_length} characters", required: true %>
      <%= f.input :password_confirmation, label: 'Password Confirmation', required: true %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Sign Up", class: 'button success' %>
    </div>
  <% end %>

  <p>Already a user? <%= link_to 'Log In',  new_user_session_path %></p>

